    <LinearLayout
        android:id="@+id/llValueTypes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@drawable/bg_white_rounded"
        android:elevation="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Net Worth -->
        <TextView
            android:id="@+id/tvSelectNetWorth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_chart_value_type_unselected"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/bold"
            android:text="@string/net_worth"
            android:textAlignment="center"
            android:textColor="@color/normal_text"
            android:textSize="12sp" />

        <!-- Income -->
        <TextView
            android:id="@+id/tvSelectIncome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_chart_value_type_unselected"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/bold"
            android:text="@string/income"
            android:textAlignment="center"
            android:textColor="@color/normal_text"
            android:textSize="12sp" />

        <!-- Expense -->
        <TextView
            android:id="@+id/tvSelectExpense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_chart_value_type_unselected"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/bold"
            android:text="@string/expense"
            android:textAlignment="center"
            android:textColor="@color/normal_text"
            android:textSize="12sp" />

        <!-- Cash Flow -->
        <TextView
            android:id="@+id/tvSelectCashflow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_chart_value_type_unselected"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/bold"
            android:text="@string/cashflow"
            android:textAlignment="center"
            android:textColor="@color/normal_text"
            android:textSize="12sp" />

    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lcLineChartMultiple"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="24dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llValueTypes"
        tools:visibility="gone" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/bcBarChartMultiple"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="24dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llValueTypes"
        tools:visibility="visible" />

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/rsTimeRange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:stepSize="10.0"
        android:valueFrom="0.0"
        android:valueTo="100.0"
        app:labelBehavior="withinBounds"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bcBarChartMultiple"
        app:values="@array/initial_time_range_slider_values" />

    <LinearLayout
        android:id="@+id/llChartTypes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="@drawable/bg_white_rounded"
        android:elevation="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rsTimeRange">

        <!-- Line chart -->
        <ImageView
            android:id="@+id/ivSelectLineChart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_chart_type_unselected"
            android:src="@drawable/ic_line_chart_unselected"
            tools:background="@drawable/bg_chart_type_selected"
            tools:src="@drawable/ic_line_chart_selected" />

        <!-- Area chart -->
        <ImageView
            android:id="@+id/ivSelectAreaChart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_chart_type_unselected"
            android:src="@drawable/ic_area_chart_unselected" />

        <!-- Bar chart -->
        <ImageView
            android:id="@+id/ivSelectBarChart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_chart_type_unselected"
            android:src="@drawable/ic_bar_chart_unselected" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>